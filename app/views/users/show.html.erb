<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hashed_password) %>:</strong></dt>
  <dd><%= @user.hashed_password if session[:user_id] == @user.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salt) %>:</strong></dt>
  <dd><%= @user.salt if session[:user_id] == @user.id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default btn-xs'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default btn-link' if session[:user_id] == @user.id %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
	      :method => 'delete',
	      :style => "color:red;",
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-default btn-link' if session[:user_id] == @user.id %>
